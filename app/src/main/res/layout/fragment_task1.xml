<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#E8F5E9">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/inputPc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Середньодобова потужність (МВт)"
            android:inputType="numberDecimal"
            android:backgroundTint="#2E7D32" />

        <EditText
            android:id="@+id/inputSigma1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Середньоквадратичне відхилення 1 (МВт)"
            android:inputType="numberDecimal"
            android:backgroundTint="#2E7D32" />

        <EditText
            android:id="@+id/inputSigma2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Середньоквадратичне відхилення 2 (МВт)"
            android:inputType="numberDecimal"
            android:backgroundTint="#2E7D32" />

        <EditText
            android:id="@+id/inputV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Вартість електроенергії (грн/кВт·год)"
            android:inputType="numberDecimal"
            android:backgroundTint="#2E7D32" />

        <Button
            android:id="@+id/calculateButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Розрахувати"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/resultsTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Результати відобразяться тут"
            android:textSize="16sp"
            android:textColor="#1B5E20" />
    </LinearLayout>
</ScrollView>
